#include "holberton.h"
/**
 * sqrt - function 2
 * @n: is int type
 * @a: is int type
 * Return: -1;
 */

int sqrt(int n, int a)
{
if (n == (a * a))
return (a);
else if (n > (a * a))
return (sqrt(n, a + 1));
else
return (-1);
}
/**
 *_sqrt_recursion - returns the natural square root of a number.
 * @n: is int type
 * Return: square root
 */

int _sqrt_recursion(int n)
{
if (n == 0)
return (0);
else if (n == 1)
return (1);
else if (n < 0)
return (-1);
else
return (sqrt(n, 1));
}
